{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM"],
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "webpack.config.js",
    "src/**/*",
    "test/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
